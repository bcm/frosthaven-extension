{
  "name": "frosthaven-extension",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,json,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,css,html}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^23.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.48.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "overrides": {
    "undici": "5.28.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "@types/sortablejs": "^1.15.9",
    "sortablejs": "^1.15.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ],
    "*.{json,css,html}": [
      "prettier --write"
    ]
  }
}
