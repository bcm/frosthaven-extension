{
    "manifest_version": 3,
    "name": "Frosthaven Scenario Backlog",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "src/service-worker.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content-script.ts"
            ]
        }
    ],
    "permissions": [
        "storage",
        "identity"
    ]
}